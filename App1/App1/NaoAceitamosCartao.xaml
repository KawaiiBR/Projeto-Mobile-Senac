<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.NaoAceitamosCartao"
             BackgroundColor="DarkRed">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Infelizmente não aceitamos cartões de credito ;-;

Não se esqueça, o lanche será enviado ao endereço cadastrado referente a compra"
                   Margin="10,0,5,0"/>
            <Image Source="HotDog_Simples"
                   Scale="2"
                   Margin="0,50,0,0"/>
            <Label Text="- Tomates picados ao azeite
                         
                   
                   - Purê de batatas
                         
                   
                   
                   
                   - Milho
                   
                   
                   
                   
                   - Azeitonas pretas fatiadas
                   
                   
                   
                   
                   - Queijo parmesão ralado em fios"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   Margin="85,0,0,0"
                   Scale="1.2"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancelar"
                        HorizontalOptions="FillAndExpand"
                        x:Name="buttonCancelar"
                        Clicked="ButtonCancelar_Clicked"/>
                <Button Text="Confirmar"
                        HorizontalOptions="FillAndExpand"
                        x:Name="buttonCorfirmar"
                        Clicked="ButtonCorfirmar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>